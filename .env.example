# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains sensitive secrets!

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=urlscanner
DB_USER=urlscanner
DB_PASSWORD=change-this-to-secure-password

# Application Configuration
SERVER_PORT=8080

# JWT Configuration - CRITICAL: Change these in production!
# JWT_SECRET must be at least 64 characters for HS256 algorithm
JWT_SECRET=change-this-to-very-long-random-string-at-least-64-chars-for-production-security
JWT_EXPIRATION=86400000

# URL Scan API Configuration (to be implemented)
URLSCAN_API_KEY=your-urlscan-io-api-key-here
URLSCAN_API_URL=https://urlscan.io/api/v1

# Optional: Cache configuration
CACHE_TTL_MINUTES=60

# Development vs Production environment
SPRING_PROFILES_ACTIVE=dev